{
  "compilerOptions": {
    "outDir": "./build/",
    "module": "commonjs",
    "target": "esnext",
    "noEmit": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": [
      "node",
      "jest",
      "history",
      "qs",
      "react",
      "react-dom",
      "react-redux",
      "redux-actions",
      "styled-components"
    ]
  },
  "include": ["shared", "src"],
  "exclude": ["node_modules", "build", "jest", "test", "__mocks__"]
}
