{
  "name": "server-template-server",
  "private": true,
  "scripts": {
    "unit": "sh -c 'test_name=$(printf '%s' \"$0\" | sed -e 's/^sh$//g') && mocha -r ts-node/register --recursive \"**/${test_name:-*}.unit.ts\"'",
    "test": "mocha -r ts-node/register --timeout 2000 --recursive \"**/${test_name:-*}.test.ts\"",
    "start": "npm run start:dev",
    "start:dev": "NODE_ENV=development ts-node-dev --respawn --transpileOnly index.ts | bunyan -l debug",
    "lint": "tslint -p . -c tslint.json",
    "build:test": "tsc --build tsconfig.test.json",
    "build:prod": "NODE_ENV=production tsc --build tsconfig.json",
    "start:prod": "NODE_ENV=production npm run build:prod && node build/index.js"
  },
  "dependencies": {
    "@sentry/node": "^4.6.6",
    "boom": "^7.3.0",
    "bunyan": "^1.8.12",
    "koa": "^2.7.0",
    "koa-basic-auth": "^4.0.0",
    "koa-joi-router": "^5.3.0",
    "koa-qs": "^2.0.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.23",
    "mustache": "^3.0.1",
    "pg-promise": "^8.6.4",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "showdown": "^1.9.0",
    "stack-trace": "0.0.10",
    "unescape": "^1.0.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/boom": "^7.2.1",
    "@types/bunyan": "^1.8.6",
    "@types/chai": "^4.1.7",
    "@types/cheerio": "^0.22.11",
    "@types/co-body": "0.0.3",
    "@types/joi": "^14.3.2",
    "@types/koa": "^2.0.48",
    "@types/koa-basic-auth": "^2.0.3",
    "@types/koa-qs": "^2.0.0",
    "@types/koa-router": "^7.0.40",
    "@types/lodash": "^4.14.123",
    "@types/mocha": "^5.2.6",
    "@types/moment-timezone": "^0.5.12",
    "@types/mustache": "^0.8.32",
    "@types/node": "^10.14.4",
    "@types/pg": "^7.4.14",
    "@types/request": "^2.48.1",
    "@types/request-promise": "^4.1.42",
    "@types/showdown": "^1.9.2",
    "@types/uuid": "^3.4.4",
    "chai": "^4.2.0",
    "cheerio": "^1.0.0-rc.3",
    "mocha": "^5.2.0",
    "prettier": "^1.16.4",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.2"
  }
}
