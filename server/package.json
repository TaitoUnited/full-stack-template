    "jwks-rsa": "^1.2.1",
    "koa": "^2.4.1",
    "koa-basic-auth": "^2.0.0",
    "koa-better-body": "^3.0.4",
    "koa-body-parsers": "^3.1.0",
    "koa-cache-control": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-jwt": "^1.2.0",
    "koa-router": "^7.3.0",
    "lodash": "^4.17.4",
    "pg-promise": "^7.4.0",
    "raven": "^2.4.0",
    "raw-body": "^2.3.2",
    "request-promise-native": "^1.0.5",
    "swagger-injector": "^1.2.0",
    "uuid": "^3.2.1"
