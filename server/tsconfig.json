{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/common/vendor/types", "./node_modules/@types"],
    "outDir": "../build",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["shared/**/*.ts", "src/**/*.ts", "index.ts", "test/**/*.ts"]
}
