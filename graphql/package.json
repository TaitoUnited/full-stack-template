{
  "name": "server-template-server",
  "main": "index.js",
  "scripts": {
    "types-install": "if [ -f .flowconfig ]; then flow-typed install; elif [ -f tsconfig.json ]; then echo TODO typescript install; fi",
    "types": "if [ -f .flowconfig ]; then flow; elif [ -f tsconfig.json ]; then echo TODO run typescript; fi",
    "pretty-quick": "pretty-quick",
    "lint": "eslint . --ignore-path .eslintignore --quiet",
    "unit": "mocha --require babel-core/register --recursive 'src/**/*.unit.js'",
    "test": "mocha --require babel-core/register --recursive \"src/**/${test_name:-*}.test.js\" \"test/**/${test_name:-*}.test.js\"",
    "start": "npm run start:dev",
    "start:dev": "NODE_ENV=development nodemon -L ./index.js --ignore 'test/*.js'",
    "start:dev:trace": "NODE_ENV=development nodemon -L ./index.js --ignore 'test/*.js'",
    "start:prod": "NODE_ENV=production nodemon -L ./index.production.js",
    "build:prod": "NODE_ENV=production babel -d ../build --ignore node_modules ."
  },
  "_comment": "TODO upgrade koa-jwt. the latest breaks determineAuthMethod()",
  "dependencies": {
    "babel-polyfill": "~6.26.0",
    "babel-runtime": "~6.26.0",
    "koa": "~2.5.3",
    "koa-cache-control": "~2.0.0",
    "koa-proxy": "0.9.0",
    "koa-router": "^7.4.0",
    "request-promise-native": "~1.0.5"
  },
  "devDependencies": {
    "babel-cli": "~6.26.0",
    "babel-core": "~6.26.3",
    "babel-eslint": "~9.0.0",
    "babel-plugin-transform-object-rest-spread": "~6.26.0",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-env": "~1.7.0",
    "babel-register": "~6.26.0",
    "chai": "~4.1.2",
    "chai-as-promised": "~7.1.1",
    "eslint": "~5.5.0",
    "eslint-config-airbnb-base": "~13.1.0",
    "eslint-config-prettier": "~3.0.1",
    "eslint-plugin-import": "~2.14.0",
    "eslint-plugin-prettier": "~2.6.2",
    "mocha": "^5.2.0",
    "nodemon": "~1.18.4",
    "prettier": "~1.14.2",
    "pretty-quick": "^1.6.0"
  },
  "_flowComment": "NOTE: for flow add also flow-bin, flow-typed and babel-preset-flow"
}
