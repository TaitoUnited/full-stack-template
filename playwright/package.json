{
  "name": "full-stack-template-playwright",
  "type": "module",
  "scripts": {
    "install:clean": "rm -rf node_modules && npm install",
    "pretty-quick": "pretty-quick",
    "lint": "eslint 'tests/**/*.ts'",
    "lint:fix": "eslint 'tests/**/*.{ts,tsx}' --fix",
    "format:check": "prettier --check './tests/**/*.{ts,tsx}'",
    "format:write": "prettier --write './tests/**/*.{ts,tsx}'",
    "typecheck": "tsc --noEmit",
    "playwright:test": "playwright test",
    "playwright:debug": "playwright test --debug",
    "playwright:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@eslint/js": "9.13.0",
    "@playwright/test": "1.48.2",
    "@types/eslint__js": "8.42.3",
    "@types/node": "22.8.0",
    "dotenv": "16.4.5",
    "eslint": "9.13.0",
    "eslint-plugin-playwright": "2.0.0",
    "prettier": "3.3.3",
    "typescript": "5.6.2",
    "typescript-eslint": "8.11.0"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "prettier": {
    "printWidth": 80,
    "bracketSpacing": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
