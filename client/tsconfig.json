{
  "compilerOptions": {
    "outDir": "./build/",
    "module": "commonjs",
    "target": "esnext",
    "noEmit": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      "~common/*": ["src/common/*"],
      "~services/*": ["src/common/services/*"],
      "~shared/*": ["shared/*"],
      "~theme": ["src/common/theme"],
      "~ui": ["src/common/ui/index.ts"],
      "~utils/*": ["src/common/utils/*"],
    },
    "types": [
      "node",
      "jest",
      "react",
      "react-dom",
      "react-redux",
      "react-router-dom",
      "redux-logger",
      "styled-components",
      "query-string"
    ]
  },
  "include": ["shared", "src"],
  "exclude": ["node_modules", "build", "jest", "test", "__mocks__", "src/sw.js"]
}
