{
  "presets": [
    [
      "es2015",
      {
        "loose": true,
        "modules": false
      }
    ],
    "flow",
    "stage-2",
    "react"
  ],
  "env": {
    // When testing we want to compile modules to commonjs
    "test": {
      "presets": ["es2015", "stage-2", "react"]
    },
    "development": {
      "plugins": ["react-hot-loader/babel"]
    }
  }
}
